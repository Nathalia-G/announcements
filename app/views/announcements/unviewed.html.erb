<% provide(:title, "Unviewed posts") %>
<h1>Unviewed posts</h1>

<% @announcements.each do |announcement| %>
  <div class="center jumbotron">
    <ul>
      <h2><%= "Written by: " %><%= announcement.user.name%>
      </h2>
      <h3><%= announcement.content %></h3>
      <h5><b>Created at:</b> <%= announcement.created_at.strftime("%A , %d %B %Y at %H:%M") %></h5>
      
      <%= form_for(:seen, url: unviewed_path) do |f| %>
      <%= f.label :announcement_view, class: "checkbox inline" do %>
      <%= f.hidden_field :user_id, value: @user%>
      <%= f.hidden_field :announcement_id, value: announcement.id%>
        <%= f.check_box :announcement_view, :onclick => "this.form.submit()"%>
        <span>Mark as seen</span>
        <% end %>

      <% end %>
    </ul>
  </div>
<% end %>


